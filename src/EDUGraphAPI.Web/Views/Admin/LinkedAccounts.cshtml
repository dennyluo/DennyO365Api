@model IEnumerable<EDUGraphAPI.Data.ApplicationUser>

@{
    ViewBag.Title = "Linked Accounts";
}

<h2>Linked Accounts</h2>

<table class="table table-striped table-bordered">
    <tr>
        <th>Local Account</th>
        <th>Office 365 Account</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Email)</td>
            <td>@Html.DisplayFor(modelItem => item.O365Email)</td>
            <td>
                @Html.ActionLink("Unlink", "UnlinkAccounts", new { id = item.Id })
            </td>
        </tr>
    }
    @if (Model.IsNullOrEmpty())
    {
        <tr>
            <td class="empty-result" colspan="3">No linked accounts</td>
        </tr>
    }
</table>
<p>@Html.ActionLink("Return", "Index", null, null, new { @class = "btn btn-default" })</p>
